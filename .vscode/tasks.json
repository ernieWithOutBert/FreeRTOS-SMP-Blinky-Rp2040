{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run cmake for debug build",
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Run cmake for release build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake -DCMAKE_BUILD_TYPE=Release ${workspaceFolder}",
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        }
    ]
}